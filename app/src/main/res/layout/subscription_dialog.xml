<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_subsctiption_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        android:text="Subscription Message"/>

    <TextView
        android:id="@+id/tv_subsctiption_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_subsctiption_title"
        android:textStyle="normal"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:text="@string/subscription_meg"/>


    <TextView
        android:id="@+id/tv_subsctiption_now"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_below="@+id/tv_subsctiption_msg"
        android:gravity="center"

        android:textColor="@color/colorPrimary"
        android:text="Subscription Now"/>

    <TextView
        android:id="@+id/tv_subsctiption_cancel"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_below="@+id/tv_subsctiption_now"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="Cancel"/>


</RelativeLayout>